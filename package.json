{
  "name": "fullstack-challenge",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "npx nodemon index.js",
    "migrate:all": "npx sequelize-cli db:create && npx sequelize-cli db:migrate",
    "seed:all": "npm run migrate:all && npx sequelize-cli db:seed:all",
    "seed:test": "npx sequelize-cli db:drop && npx sequelize-cli db:create && npx sequelize-cli db:migrate && npx sequelize-cli db:seed:all",
    "pretest": "cross-env NODE_ENV=test npm run seed:test",
    "test": "cross-env NODE_ENV=test jest --testTimeout=10000",
    "build:client": "cd ./client && npm run build"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/client/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/server/__tests__/fixtures/",
      "<rootDir>/client/",
      "<rootDir>/server/config/"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "colors": "^1.3.3",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "express-graphql": "^0.9.0",
    "express-jwt": "^5.3.1",
    "express-rate-limit": "^5.0.0",
    "express-validator": "^6.1.1",
    "graphql": "^14.4.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "method-override": "^3.0.0",
    "morgan": "^1.9.1",
    "mysql2": "^2.0.1",
    "sequelize": "^5.21.2",
    "sqlite3": "^4.1.0"
  },
  "devDependencies": {
    "cross-env": "^6.0.3",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "sequelize-cli": "^5.5.1",
    "supertest": "^4.0.2"
  },
  "lint-staged": {
    "{server}/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  }
}
